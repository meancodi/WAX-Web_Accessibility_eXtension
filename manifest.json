{
    "name": "WAX - WCAG Accessibility eXtension",
    "version": "1.0",
    "description": "Checks WCAG 2.0, 2.1, and 2.2 compliance and provides suggestions for improvement.",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": ["<all_urls>"],
    
    "icons": {
        "16": "./icons/xslogo.png",
        "48": "./icons/llogo.png",
        "128": "./icons/xllogo.png"
    },
    "action": {
        "default_popup": "popup.html"
    }
}